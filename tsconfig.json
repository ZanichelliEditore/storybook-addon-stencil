{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": false,
        "isolatedModules": true,
        "outDir": "./dist",
        "declaration": true,
        "jsx": "react",
        "lib": ["es2017", "dom"],
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "target": "ES2020"
    },
    "include": ["src/**/*"]
}
